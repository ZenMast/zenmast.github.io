---
import type { VideosEntry } from "@/types";

interface Props {
  entry: VideosEntry;
}

const { entry } = Astro.props;
const { title, youtubeId } = entry.data;
const thumbnailUrl = `https://img.youtube.com/vi/${youtubeId}/maxresdefault.jpg`;
---

<div
  class="h-full m-2 pl-0 bg-gradient-to-br gradient rounded-lg intersect:animate-fadeUp opacity-0"
>
  <div class="glass h-full rounded-lg flex flex-col">
    <a class="group hover:opacity-100" href={`/videos/${entry.id}`}>
      <div class="relative rounded-lg pb-9/16 overflow-hidden">
        <img
          class="absolute rounded-lg object-cover w-full h-full group-hover:scale-[105%] transition-all duration-300"
          src={thumbnailUrl}
          alt={title}
          loading="eager"
        />
      </div>
    </a>
    <div class="p-3 text-center">
      <h5>{title}</h5>
    </div>
  </div>
</div>